<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% if page_title is defined %}{{ page_title }}{% else %}Welcome!{% endif %}{% endblock %}</title>
        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
        {% if project is defined %}
            <script>
                const PROJECT_IDENTIFIER = '{{ project.identifier }}';
            </script>
        {% endif %}
    </head>
    <body>
    <header class="navbar sticky-top navbar-light shadow-sm border-bottom container">
        <a href="#" class="navbar-brand">Diplom</a>
        <div class="ml-auto">
            <div id="comments_dropdown" class="dropdown">
                <a id="comments_dropdown_view" class="nav-item dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true">{{ 'project.comments'|trans }}</a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="comments_dropdown_view">
                    <div id="comments_dropdown_spinner" class="text-center">
                        <div class="spinner-border">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                    <div id="comments_dropdown_content_exist">
                        <h6 class="dropdown-header">{{ 'label.comments.exist'|trans }}</h6>
                        <div id="comments_dropdown_content_exist_list">
                        </div>
                        <div class="dropdown-divider"></div>
                        <a id="comments_dropdown_read_all_btn" class="dropdown-item">{{ 'label.comments.read_all'|trans }}</a>
                    </div>
                    <div id="comments_dropdown_content_empty">
                        <h6 class="dropdown-header">{{ 'label.comments.empty'|trans }}</h6>
                    </div>
                </div>
            </div>
        </div>
    </header>
        <div class="container">

            {% block body %}{% endblock %}
        </div>
        {% block footer %}{% endblock %}

        {{ encore_entry_script_tags('app') }}
        {% block javascripts %}
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        {% endblock %}
    </body>
</html>
