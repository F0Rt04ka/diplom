<div>
    {{ form_start(form) }}
    <div class="form-group row offset-2">
        {{ form_label(form.name, 'Project name', {'label_attr': {'class': 'col-2'}}) }}
        {{ form_errors(form.name) }}
        <div class="col-4">
            {{ form_widget(form.name) }}
        </div>
        <button type="submit" class="btn btn-primary col-2">{{ 'Save'|trans }}</button>
    </div>
    {{ form_end(form) }}
</div>